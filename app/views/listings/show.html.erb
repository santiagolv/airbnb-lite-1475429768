<div class="page-header">
  <h3>Listing #<%= @listing.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @listing.title %></dd>

      <dt>Private room entire apartment</dt>
      <dd><%= @listing.private_room_entire_apartment %></dd>

      <dt>Description</dt>
      <dd><%= @listing.description %></dd>

      <dt>Bedrooms</dt>
      <dd><%= @listing.bedrooms %></dd>

      <dt>Bathrooms</dt>
      <dd><%= @listing.bathrooms %></dd>

      <dt>Beds</dt>
      <dd><%= @listing.beds %></dd>

      <dt>Max occupants</dt>
      <dd><%= @listing.max_occupants %></dd>

      <dt>Neighborhood</dt>
      <dd><%= @listing.neighborhood_id %></dd>

      <dt>Default price</dt>
      <dd><%= @listing.default_price %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/listings" class="btn btn-primary">
        Back
      </a>
      <a href="/listings/<%= @listing.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_listing/<%= @listing.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Listing has many listing_photos -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Listing_photos
      </li>

      <% @listing.listing_photos.each do |listing_photo| %>
        <li class="list-group-item">
          <a href="/listing_photos/<%= listing_photo.id %>">
            <%= listing_photo.listing_id %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Listing has many policies -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Policies
      </li>

      <% @listing.policies.each do |policy| %>
        <li class="list-group-item">
          <a href="/policies/<%= policy.id %>">
            <%= policy.listing_id %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Listing has many available_days -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Available_days
      </li>

      <% @listing.available_days.each do |available_day| %>
        <li class="list-group-item">
          <a href="/available_days/<%= available_day.id %>">
            <%= available_day.date %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
